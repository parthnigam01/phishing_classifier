										"method": "POST",
										"headers": {
											"Content-Type": "application/json"
										},
										"body": {
											"value": "{\"Pipelinename\":\" pipeline().Pipeline\",\n\"Dataset\" :\"pipeline().DataFactory \",\n\"Errormsg\":\" activity('Get Metadata1').output.Error.Message\",\n\"runID\":\"pipeline().RunId \"\n\n\n}",
											"type": "Expression"
										}
									}
								}
							],
							"ifTrueActivities": [
								{
									"name": "Wait1",
									"type": "Wait",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"waitTimeInSeconds": 1
									}
								}
							]
						}
					}
